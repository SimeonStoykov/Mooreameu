@model Mooreameu.App.Models.ViewModels.Contests.ContestFullVIewModel


<div class="container-fluid">
    <div class="jumbotron">
        <h1>@Model.Title</h1> <span>Created by</span>
        @Html.DisplayFor(m => m.Owner) on @Html.DisplayFor(m => m.CreatedOn)
    </div>

    <p>@Model.Status for voting</p>
    <p>@Model.Description</p>

    @if (Model.Voting == Mooreameu.Model.VotingStrategy.Open ||
        Model.Voting == Mooreameu.Model.VotingStrategy.OpenSingle)
    {
        if (!ViewBag.IsParticipating)
        {
            @Html.ActionLink("Participate", "Participate", new { id = Model.ContestId }, new { @class = "btn btn-warning" });
        }
    }

    @Html.DisplayFor(m => m.Pictures)
</div>